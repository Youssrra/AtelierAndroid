<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimaryDark"
    android:foregroundTint="@color/colorPrimaryDark"
    tools:context=".SkillsActivity">
    <include layout="@layout/tool_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/materialCardViewSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/background_border">


            <LinearLayout
                android:id="@+id/we"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:text="SKILLS"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateIds" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewAndroid"
                        android:layout_width="6dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Android"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekBarAndroid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:progressTint="#009688"
                        app:tickMarkTint="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewIOS"
                        android:layout_width="6dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="IOS"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekBarIOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:progressTint="#009688" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewflutter"
                        android:layout_width="6dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Flutter"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekBarflutter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:progressTint="#009688" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/materialCardViewLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/background_border">


            <TextView
                android:id="@+id/textViewLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Language"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxArabic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:checked="true"
                    android:text="Arabic"
                    android:textColor="@color/colorPrimary"
                    android:textColorHighlight="@color/black"
                    android:textColorLink="@color/colorPrimaryLight" />

                <CheckBox
                    android:id="@+id/checkboxFrench"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="French"
                    android:textColor="@color/colorPrimary" />

                <CheckBox
                    android:id="@+id/checkboxEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="English"
                    android:textColor="@color/colorPrimary" />
            </RadioGroup>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/materialCardViewHobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/background_border"
       >


            <TextView
                android:id="@+id/textViewSkills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Hobbies"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxMusic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:checked="true"
                    android:text="Music"
                    android:textColor="@color/colorPrimary"
                    android:textColorHighlight="@color/black"
                    android:textColorLink="@color/colorPrimaryLight" />

                <CheckBox
                    android:id="@+id/checkboxSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sport"
                    android:textColor="@color/colorPrimary"
                    android:textColorHighlight="@color/black"
                    android:textColorLink="@color/colorPrimaryLight" />

                <CheckBox
                    android:id="@+id/checkboxGames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Games"
                    android:textColor="@color/colorPrimary"
                    android:textColorHighlight="@color/black"
                    android:textColorLink="@color/colorPrimaryLight" />
            </RadioGroup>

        </FrameLayout>

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="SUBMIT" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>